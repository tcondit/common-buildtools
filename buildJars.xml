                    <include name="contactsources/concerto"/>
                    <include name="contactsources/generic"/>
                    <include name="contactsources/Genesys"/>
                    <include name="generated"/>
                    <include name="server"/>
                    <include name="tests"/>
                    <include name="tools"/>
                </dirset>
            </classpath>
        </javac>
    </target>

