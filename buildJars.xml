        <!-- <echo message="${javac.source}"/> -->

        <javac srcdir="${dir.src}" destdir="${dir.src}"
            debug="${javac.debug}"
            deprecation="${javac.deprecation}"
            fork="yes"
            memoryInitialSize="200m" memoryMaximumSize="200m">
